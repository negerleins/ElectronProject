{
  "name": "bluesmith",
  "private": true,
  "version": "0.0.0",
  "description": "bluethoothctl GUI",
  "license": "MIT",
  "author": "negerleins",
  "type": "module",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:electron dev:react",
    "dev:react": "vite --mode development",
    "dev:electron": "npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "vite build && npm run build:electron",
    "build:electron": "mkdir -p dist-electron && cp ./src/electron/* dist-electron/",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:linux": "npm run build && electron-builder --linux --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/vite": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.487.0",
    "next-themes": "^0.4.6",
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tw-animate-css": "^1.2.5",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "vite": "^6.2.0"
  }
}
