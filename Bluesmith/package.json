{
  "name": "bluesmith",
  "private": true,
  "version": "0.0.0",
  "description": "bluethoothctl GUI",
  "license": "MIT",
  "author": "negerleins",
  "type": "module",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:electron dev:react",
    "dev:react": "vite --mode development",
    "dev:electron": "npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "vite build && npm run build:electron",
    "build:electron": "mkdir -p dist-electron && cp ./src/electron/* dist-electron/",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:linux": "npm run build && electron-builder --linux --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "vite": "^6.2.0"
  }
}
